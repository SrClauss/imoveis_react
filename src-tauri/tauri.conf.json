{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Casa_Alta_Imoveis",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": true, 
        "writeFile": true,
        "exists":true,
        "scope": [
          "$HOME/documents/**",
          "$APPDIR/data/**",
          "$APPDATA/**",
          "$APPLOCALDATA/**"
        ]      
      },
      "path":{
        "all": true
      }
     
    
  },
    "windows": [
      { "label":"main", 
        "title": "Casa Alta",
        "width": 800,
        "height": 600
      }
     
  
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.imobiliariacasaalta",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
